// Test App: Stopwatch
// Demonstrates timing and intervals with reactivity

style {
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background: linear-gradient(135deg, #2193b0 0%, #6dd5ed 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stopwatch-card {
        background: white;
        border-radius: 20px;
        padding: 60px 80px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

    .title {
        font-size: 28px;
        color: #333;
        margin-bottom: 40px;
        font-weight: 600;
    }

    .time-display {
        font-size: 100px;
        font-weight: bold;
        color: #2193b0;
        margin: 40px 0;
        font-family: "SF Mono", Monaco, monospace;
        letter-spacing: 8px;
    }

    .button-group {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-top: 40px;
    }

    .btn {
        padding: 18px 40px;
        font-size: 18px;
        font-weight: 600;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.2s;
        min-width: 140px;
    }

    .btn-start {
        background: #2ecc71;
        color: white;
    }

    .btn-start:hover {
        background: #27ae60;
        transform: translateY(-2px);
    }

    .btn-stop {
        background: #e74c3c;
        color: white;
    }

    .btn-stop:hover {
        background: #c0392b;
        transform: translateY(-2px);
    }

    .btn-reset {
        background: #95a5a6;
        color: white;
    }

    .btn-reset:hover {
        background: #7f8c8d;
        transform: translateY(-2px);
    }

    .btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
    }

    .status {
        margin-top: 30px;
        font-size: 16px;
        color: #7f8c8d;
        font-weight: 500;
    }
}

fn Stopwatch() -> JSX {
    return (
        <div class="stopwatch-card">
            <h1 class="title">⏱️ Stopwatch</h1>
            <div class="time-display" id="time">00:00.00</div>
            <div class="status" id="status">Ready</div>
            <div class="button-group">
                <button class="btn btn-start" id="start-btn">Start</button>
                <button class="btn btn-stop" id="stop-btn">Stop</button>
                <button class="btn btn-reset" id="reset-btn">Reset</button>
            </div>
        </div>
    );
}

fn main() {
    console.log("⏱️ Stopwatch app starting...");
}
