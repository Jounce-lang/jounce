// App 02: Temperature Converter
// Tests: Signals + Computed values
// Features: Signals, Computed
// Expected: ~70 lines

component TemperatureConverter() {
    let celsius = signal(0);

    // Computed Fahrenheit
    let fahrenheit = computed(() => {
        return (celsius.value * 9 / 5) + 32;
    });

    // Computed Kelvin
    let kelvin = computed(() => {
        return celsius.value + 273.15;
    });

    let handleInput = (e) => {
        let value = e.target.value;
        if (value == "") {
            celsius.value = 0;
        } else {
            celsius.value = parseFloat(value);
        }
    };

    return <div style="font-family: Arial, sans-serif; max-width: 500px; margin: 50px auto; padding: 30px; border: 2px solid #2563eb; border-radius: 12px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
        <h1 style="text-align: center; margin-bottom: 30px; font-size: 32px;">ğŸŒ¡ï¸ Temperature Converter</h1>

        <div style="background: white; padding: 20px; border-radius: 8px; color: #333; margin-bottom: 20px;">
            <label style="display: block; font-weight: bold; margin-bottom: 10px; color: #2563eb;">
                Celsius (Â°C)
            </label>
            <input
                type="number"
                oninput={handleInput}
                placeholder="Enter temperature in Celsius"
                style="width: 100%; padding: 12px; font-size: 18px; border: 2px solid #2563eb; border-radius: 4px; box-sizing: border-box;"
            />
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-top: 20px;">
            <div style="background: rgba(255,255,255,0.2); padding: 20px; border-radius: 8px; text-align: center;">
                <div style="font-size: 14px; margin-bottom: 5px;">Fahrenheit</div>
                <div style="font-size: 36px; font-weight: bold;">
                    {fahrenheit.value}Â°F
                </div>
            </div>

            <div style="background: rgba(255,255,255,0.2); padding: 20px; border-radius: 8px; text-align: center;">
                <div style="font-size: 14px; margin-bottom: 5px;">Kelvin</div>
                <div style="font-size: 36px; font-weight: bold;">
                    {kelvin.value}K
                </div>
            </div>
        </div>

        <div style="margin-top: 25px; padding: 15px; background: rgba(255,255,255,0.1); border-radius: 8px; font-size: 14px;">
            <p style="margin: 5px 0;">
                <strong>Formulas:</strong>
            </p>
            <p style="margin: 5px 0;">
                Â°F = (Â°C Ã— 9/5) + 32
            </p>
            <p style="margin: 5px 0;">
                K = Â°C + 273.15
            </p>
        </div>
    </div>;
}

fn main() {
    console.log("App 02: Temperature Converter - Starting...");
}
