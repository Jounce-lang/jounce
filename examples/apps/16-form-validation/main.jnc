// App 16: Form Validation
// Tests: Multiple inputs, arrays, array methods

component App() {
    let email = signal("");
    let password = signal("");
    let errors = signal([]);

    <div class="app">
        <h1>Form Validation Test</h1>

        <form>
            <input 
                type="email" 
                placeholder="Email"
                value={email.value} 
                oninput={(e) => email.set(e.target.value)} 
            />

            <input 
                type="password" 
                placeholder="Password (8+ chars)"
                value={password.value} 
                oninput={(e) => password.set(e.target.value)} 
            />

            <p>Email: {email.value}</p>
            <p>Password length: {password.value.length}</p>

            <div>
                {errors.value.length > 0 ? (
                    <ul>
                        {errors.value.map((err) => <li>{err}</li>)}
                    </ul>
                ) : <p>No errors</p>}
            </div>
        </form>
    </div>
}
