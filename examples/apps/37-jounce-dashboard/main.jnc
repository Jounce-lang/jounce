// Jounce Demo Dashboard – main.jnc

struct Task {
    id: i32,
    label: string,
    done: bool,
}

struct Kpi {
    label: string,
    value: string,
    subtitle: string,
    accent: string,
}

component App() {
    // KPI state (pretend these came from a backend)
    let kpis = signal<Vec<Kpi>>(vec![
        Kpi {
            label: "Open Opportunities",
            value: "18",
            subtitle: "Active deals in pipeline",
            accent: "accent-blue",
        },
        Kpi {
            label: "Monthly Recurring",
            value: "$42,300",
            subtitle: "MRR from active accounts",
            accent: "accent-green",
        },
        Kpi {
            label: "Win Rate",
            value: "31%",
            subtitle: "Trailing 90 days",
            accent: "accent-purple",
        },
    ]);

    // Filter state
    let selectedView = signal<string>("today");

    // Focus tasks
    let tasks = signal<Vec<Task>>(vec![
        Task { id: 1, label: "Follow up with top 3 deals", done: false },
        Task { id: 2, label: "Send QBR recap email", done: false },
        Task { id: 3, label: "Review pipeline for stuck opps", done: true },
        Task { id: 4, label: "Log notes from today’s calls", done: false },
    ]);

    // Demo "refresh" handler – just rotates values a bit
    fn refreshKpis() {
        let current = kpis.value;

        let rotated = vec![
            Kpi {
                label: current[0].label,
                value: (current[0].value.clone() + "↑"),
                subtitle: current[0].subtitle,
                accent: current[0].accent,
            },
            Kpi {
                label: current[1].label,
                value: (current[1].value.clone() + "↑"),
                subtitle: current[1].subtitle,
                accent: current[1].accent,
            },
            Kpi {
                label: current[2].label,
                value: (current[2].value.clone() + "★"),
                subtitle: current[2].subtitle,
                accent: current[2].accent,
            },
        ];

        kpis.value = rotated;
    }

    fn setView(view: string) {
        selectedView.value = view;
    }

    fn toggleTask(id: i32) {
        tasks.value = tasks.value.map((t) => {
            if t.id == id {
                return Task {
                    ...t,
                    done: !t.done,
                };
            }
            return t;
        });
    }

    return <div class="app-root">
        <div class="app-shell">
            <header class="app-header">
                <div class="logo-area">
                    <div class="logo-mark">J</div>
                    <div class="logo-text">
                        <h1>Jounce Demo Dashboard</h1>
                        <p>Single-file full-stack UI with reactive state and scoped styles.</p>
                    </div>
                </div>
                <div class="header-actions">
                    <button class="ghost-button" onclick={() => setView("today")}>
                        Today
                    </button>
                    <button class="ghost-button" onclick={() => setView("week")}>
                        This Week
                    </button>
                    <button class="ghost-button primary" onclick={refreshKpis}>
                        Refresh Stats
                    </button>
                </div>
            </header>

            <main class="app-main">
                <section class="kpi-row">
                    {kpis.value.map((kpi) =>
                        <div class={"kpi-card " + kpi.accent}>
                            <div class="kpi-label">{kpi.label}</div>
                            <div class="kpi-value">{kpi.value}</div>
                            <div class="kpi-subtitle">{kpi.subtitle}</div>
                        </div>
                    )}
                </section>

                <section class="content-grid">
                    <div class="panel opportunities">
                        <div class="panel-header">
                            <h2>Pipeline Snapshot</h2>
                            <span class="pill pill-muted">
                                View: {selectedView.value == "today" ? "Today" : "This Week"}
                            </span>
                        </div>
                        <div class="opportunity-list">
                            <div class="opportunity-row">
                                <div class="dot dot-blue"></div>
                                <div class="opp-main">
                                    <div class="opp-title">ACME Corp – Security Renewal</div>
                                    <div class="opp-sub">
                                        Stage: Proposal • Est. $12,500 MRR
                                    </div>
                                </div>
                                <div class="opp-tag tag-warm">High Priority</div>
                            </div>

                            <div class="opportunity-row">
                                <div class="dot dot-green"></div>
                                <div class="opp-main">
                                    <div class="opp-title">Starlight Media – Azure Migration</div>
                                    <div class="opp-sub">
                                        Stage: Discovery • Est. $7,800 MRR
                                    </div>
                                </div>
                                <div class="opp-tag tag-cool">In Discovery</div>
                            </div>

                            <div class="opportunity-row">
                                <div class="dot dot-purple"></div>
                                <div class="opp-main">
                                    <div class="opp-title">Northwind Logistics – MDR + Backup</div>
                                    <div class="opp-sub">
                                        Stage: Negotiation • Est. $18,200 MRR
                                    </div>
                                </div>
                                <div class="opp-tag tag-hot">Hot</div>
                            </div>
                        </div>
                    </div>

                    <div class="panel focus">
                        <div class="panel-header">
                            <h2>Today’s Focus</h2>
                            <span class="pill pill-accent">LLM-friendly demo</span>
                        </div>
                        <div class="task-list">
                            {tasks.value.map((t) =>
                                <label class={"task-row " + (t.done ? "task-done" : "")}>
                                    <input
                                        type="checkbox"
                                        checked={t.done}
                                        onchange={() => toggleTask(t.id)}
                                    />
                                    <span class="task-label">{t.label}</span>
                                </label>
                            )}
                        </div>
                        <div class="panel-footer">
                            <div class="hint">
                                Built in <span class="hint-accent">one .jnc file</span> —
                                ready for LLMs to generate and humans to tweak.
                            </div>
                        </div>
                    </div>
                </section>
            </main>
        </div>
    </div>;
}

style App {
    padding: 32px;
    min-height: 100vh;
    background: radial-gradient(circle at top left, #171e33, #050812 55%, #020308 100%);
    color: #f9fafb;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text",
        "Segoe UI", sans-serif;

    .app-shell {
        max-width: 1120px;
        margin: 0 auto;
        padding: 24px 28px 32px;
        background: radial-gradient(circle at top right, #1f2937, #020617 60%);
        border-radius: 18px;
        border: 1px solid rgba(148, 163, 184, 0.25);
        box-shadow: 0 32px 90px rgba(15, 23, 42, 0.9);
        position: relative;
        overflow: hidden;

        &::before {
            content: "";
            position: absolute;
            inset: -120px -60px auto auto;
            background: radial-gradient(circle at top, rgba(56, 189, 248, 0.16), transparent 60%);
            opacity: 0.9;
            pointer-events: none;
        }
    }

    .app-header {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 24px;
        margin-bottom: 28px;
        padding-bottom: 20px;
        border-bottom: 1px solid rgba(148, 163, 184, 0.25);
    }

    .logo-area {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .logo-mark {
        width: 40px;
        height: 40px;
        border-radius: 14px;
        background: conic-gradient(from 210deg, #22d3ee, #a855f7, #22d3ee);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 22px;
        color: #020617;
        box-shadow: 0 16px 40px rgba(56, 189, 248, 0.55);
    }

    .logo-text h1 {
        font-size: 22px;
        margin: 0;
        letter-spacing: 0.02em;
    }

    .logo-text p {
        margin: 4px 0 0;
        font-size: 13px;
        color: #9ca3af;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .ghost-button {
        position: relative;
        padding: 8px 14px;
        font-size: 13px;
        border-radius: 999px;
        border: 1px solid rgba(148, 163, 184, 0.45);
        background: rgba(15, 23, 42, 0.6);
        color: #e5e7eb;
        cursor: pointer;
        transition: transform 0.12s ease, box-shadow 0.12s ease,
            background 0.12s ease, border-color 0.12s ease;

        &.primary {
            border-color: rgba(56, 189, 248, 0.9);
            background: radial-gradient(circle at top left, #0f172a, #06121f);
            box-shadow: 0 12px 32px rgba(56, 189, 248, 0.45);

            &:hover {
                box-shadow: 0 18px 45px rgba(56, 189, 248, 0.7);
            }
        }

        &:hover {
            transform: translateY(-1px);
            background: rgba(15, 23, 42, 0.9);
            box-shadow: 0 8px 24px rgba(15, 23, 42, 0.9);
        }
    }

    .app-main {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 20px;
        z-index: 1;
    }

    .kpi-row {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 16px;
        margin-bottom: 10px;
    }

    .kpi-card {
        position: relative;
        padding: 16px 16px 14px;
        border-radius: 14px;
        background: radial-gradient(circle at top left, #111827, #020617);
        border: 1px solid rgba(148, 163, 184, 0.3);
        box-shadow: 0 18px 45px rgba(15, 23, 42, 0.85);
        overflow: hidden;
        animation: cardEntrance 0.5s ease-out both;

        &::before {
            content: "";
            position: absolute;
            inset: -60% 40% 40% -40%;
            opacity: 0.18;
            background: radial-gradient(circle, #4f46e5, transparent 55%);
            pointer-events: none;
        }

        .kpi-label {
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.09em;
            color: #9ca3af;
            margin-bottom: 4px;
        }

        .kpi-value {
            font-size: 26px;
            font-weight: 650;
            margin-bottom: 3px;
        }

        .kpi-subtitle {
            font-size: 12px;
            color: #9ca3af;
        }
    }

    .accent-blue {
        &::before {
            background: radial-gradient(circle, #38bdf8, transparent 55%);
        }
    }

    .accent-green {
        &::before {
            background: radial-gradient(circle, #22c55e, transparent 55%);
        }
    }

    .accent-purple {
        &::before {
            background: radial-gradient(circle, #a855f7, transparent 55%);
        }
    }

    .content-grid {
        display: grid;
        grid-template-columns: minmax(0, 1.6fr) minmax(0, 1.1fr);
        gap: 18px;
        align-items: flex-start;
    }

    .panel {
        position: relative;
        border-radius: 16px;
        border: 1px solid rgba(148, 163, 184, 0.28);
        background: radial-gradient(circle at top left, #020617, #020617 60%);
        padding: 16px 16px 14px;
        box-shadow: 0 24px 60px rgba(15, 23, 42, 0.95);
        overflow: hidden;

        &.opportunities {
            &::before {
                content: "";
                position: absolute;
                inset: -30% -10% auto auto;
                background: radial-gradient(circle at top right, rgba(96, 165, 250, 0.35), transparent 65%);
                opacity: 0.75;
                pointer-events: none;
            }
        }

        &.focus {
            &::before {
                content: "";
                position: absolute;
                inset: auto -20% -45% 10%;
                background: radial-gradient(circle at bottom right, rgba(233, 213, 255, 0.3), transparent 60%);
                opacity: 0.8;
                pointer-events: none;
            }
        }
    }

    .panel-header {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 12px;
    }

    .panel-header h2 {
        margin: 0;
        font-size: 16px;
        letter-spacing: 0.04em;
        text-transform: uppercase;
        color: #e5e7eb;
    }

    .pill {
        display: inline-flex;
        align-items: center;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 11px;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        border: 1px solid rgba(148, 163, 184, 0.6);
        background: rgba(15, 23, 42, 0.6);
        color: #e5e7eb;
        backdrop-filter: blur(6px);
    }

    .pill-muted {
        border-color: rgba(148, 163, 184, 0.5);
    }

    .pill-accent {
        border-color: rgba(239, 68, 68, 0.8);
        background: radial-gradient(circle at top left, #450a0a, #111827);
        color: #fecaca;
    }

    .opportunity-list {
        position: relative;
        margin-top: 4px;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .opportunity-row {
        position: relative;
        display: grid;
        grid-template-columns: auto minmax(0, 1fr) auto;
        align-items: center;
        gap: 10px;
        padding: 10px 10px;
        border-radius: 12px;
        background: rgba(15, 23, 42, 0.82);
        border: 1px solid rgba(51, 65, 85, 0.9);
        transition: transform 0.13s ease, box-shadow 0.13s ease,
            border-color 0.13s ease, background 0.13s ease;
        cursor: default;

        &:hover {
            transform: translateY(-1px);
            border-color: rgba(96, 165, 250, 0.9);
            background: rgba(15, 23, 42, 0.98);
            box-shadow: 0 16px 40px rgba(15, 23, 42, 0.95);
        }
    }

    .dot {
        width: 9px;
        height: 9px;
        border-radius: 999px;
        box-shadow: 0 0 0 4px rgba(15, 23, 42, 0.9);
    }

    .dot-blue {
        background: #38bdf8;
    }

    .dot-green {
        background: #4ade80;
    }

    .dot-purple {
        background: #a855f7;
    }

    .opp-main {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .opp-title {
        font-size: 13px;
        font-weight: 500;
    }

    .opp-sub {
        font-size: 11px;
        color: #9ca3af;
    }

    .opp-tag {
        font-size: 11px;
        padding: 4px 8px;
        border-radius: 999px;
        border: 1px solid;
        text-transform: uppercase;
        letter-spacing: 0.06em;
        white-space: nowrap;
    }

    .tag-hot {
        border-color: rgba(239, 68, 68, 0.8);
        color: #fecaca;
        background: rgba(127, 29, 29, 0.7);
    }

    .tag-warm {
        border-color: rgba(234, 179, 8, 0.8);
        color: #fef9c3;
        background: rgba(113, 63, 18, 0.7);
    }

    .tag-cool {
        border-color: rgba(59, 130, 246, 0.8);
        color: #dbeafe;
        background: rgba(30, 64, 175, 0.7);
    }

    .panel.focus {
        display: flex;
        flex-direction: column;
    }

    .task-list {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 6px;
        margin-top: 4px;
    }

    .task-row {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 9px;
        border-radius: 10px;
        background: rgba(15, 23, 42, 0.88);
        border: 1px solid rgba(51, 65, 85, 0.9);
        cursor: pointer;
        transition: background 0.12s ease, border-color 0.12s ease,
            transform 0.12s ease;
        font-size: 13px;

        &:hover {
            background: rgba(15, 23, 42, 0.98);
            border-color: rgba(99, 102, 241, 0.9);
            transform: translateY(-1px);
        }

        input {
            width: 14px;
            height: 14px;
            border-radius: 4px;
            border: 1px solid rgba(148, 163, 184, 0.9);
            background: #020617;
        }
    }

    .task-label {
        flex: 1;
    }

    .task-done {
        border-color: rgba(34, 197, 94, 0.9);
        background: rgba(6, 78, 59, 0.9);

        .task-label {
            text-decoration: line-through;
            color: #6b7280;
        }
    }

    .panel-footer {
        margin-top: 10px;
        padding-top: 8px;
        border-top: 1px dashed rgba(55, 65, 81, 0.9);
        font-size: 11px;
        color: #9ca3af;
    }

    .hint-accent {
        color: #22d3ee;
        font-weight: 500;
    }

    @media (max-width: 960px) {
        .app-shell {
            padding: 20px 18px 24px;
        }

        .app-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .kpi-row {
            grid-template-columns: 1fr;
        }

        .content-grid {
            grid-template-columns: 1fr;
        }
    }

    @keyframes cardEntrance {
        from {
            opacity: 0;
            transform: translateY(10px) scale(0.98);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }
}