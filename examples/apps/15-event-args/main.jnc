// App 15: Event Handler Arguments
// Tests: Event object, preventDefault, multiple arguments

component App() {
    let clicks = signal(0);

    <div class="app">
        <h1>Event Handler Test</h1>

        <form>
            <button onclick={(e) => {
                clicks.set(clicks.value + 1);
            }}>
                Clicked {clicks.value} times
            </button>

            <button type="submit" onclick={(e) => {
                e.preventDefault();
                console.log("Form not submitted!");
            }}>
                Submit (prevented)
            </button>
        </form>
    </div>
}
