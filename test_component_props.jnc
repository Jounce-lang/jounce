// Test component props

component Counter(initialCount: int) {
    let count = signal(initialCount);

    <div>
        <h1>Count: {count.value}</h1>
        <button onClick={() => count.value++}>Increment</button>
    </div>
}

component Greeting(name: string, age: int) {
    <div>
        <p>Hello, {name}!</p>
        <p>You are {age} years old.</p>
    </div>
}

component Card(title: string) {
    <div class="card">
        <h2>{title}</h2>
    </div>
}

fn main() {
    // Test component with single prop
    let counter = <Counter initialCount={10} />;

    // Test component with multiple props
    let greeting = <Greeting name={"Alice"} age={25} />;

    // Test component with string prop
    let card = <Card title={"My Card"} />;
}
