// Lesson 7: Props & Composition - SOLUTION

component Card(title: String, subtitle: String) {
    <div class="card p-6 rounded shadow mb-4">
        <h2 class="text-2xl font-bold">{title}</h2>
        <p class="text-gray-600">{subtitle}</p>
    </div>
}

component App() {
    <div class="container p-8">
        <Card title="Welcome" subtitle="Learn Jounce today!" />
        <Card title="Features" subtitle="Reactive, fast, simple" />
    </div>
}
