// Test App: Simple Counter
// Validates basic reactivity pattern

style {
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .counter-card {
        background: white;
        border-radius: 20px;
        padding: 60px 80px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

    .title {
        font-size: 24px;
        color: #333;
        margin-bottom: 40px;
        font-weight: 600;
    }

    .count-display {
        font-size: 120px;
        font-weight: bold;
        color: #667eea;
        margin: 40px 0;
        font-family: "SF Mono", Monaco, monospace;
    }

    .button-group {
        display: flex;
        gap: 20px;
        justify-content: center;
    }

    .btn {
        padding: 15px 30px;
        font-size: 18px;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.1s;
        min-width: 120px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .btn:active {
        transform: translateY(2px);
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
    }

    .btn-decrement {
        background: #3b82f6;
        color: white;
    }

    .btn-decrement:hover {
        background: #2563eb;
        transform: translateY(-3px);
        box-shadow: 0 8px 12px rgba(59, 130, 246, 0.4);
    }

    .btn-decrement:active {
        background: #1d4ed8;
        transform: translateY(4px);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    .btn-reset {
        background: #fbbf24;
        color: #111;
    }

    .btn-reset:hover {
        background: #f59e0b;
        transform: translateY(-3px);
        box-shadow: 0 8px 12px rgba(251, 191, 36, 0.4);
    }

    .btn-reset:active {
        background: #d97706;
        transform: translateY(4px);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    .btn-increment {
        background: #10b981;
        color: white;
    }

    .btn-increment:hover {
        background: #059669;
        transform: translateY(-3px);
        box-shadow: 0 8px 12px rgba(16, 185, 129, 0.4);
    }

    .btn-increment:active {
        background: #047857;
        transform: translateY(4px);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }
}

fn Counter() -> JSX {
    return (
        <div class="counter-card">
            <h1 class="title">Simple Counter</h1>
            <div class="count-display" id="count">0</div>
            <div class="button-group">
                <button class="btn btn-decrement" id="dec-btn">âˆ’ Decrease</button>
                <button class="btn btn-reset" id="reset-btn">Reset</button>
                <button class="btn btn-increment" id="inc-btn">+ Increase</button>
            </div>
        </div>
    );
}

