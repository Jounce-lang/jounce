// Test App: Simple Counter
// Validates basic reactivity pattern

style {
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .counter-card {
        background: white;
        border-radius: 20px;
        padding: 60px 80px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

    .title {
        font-size: 24px;
        color: #333;
        margin-bottom: 40px;
        font-weight: 600;
    }

    .count-display {
        font-size: 120px;
        font-weight: bold;
        color: #667eea;
        margin: 40px 0;
        font-family: "SF Mono", Monaco, monospace;
    }

    .button-group {
        display: flex;
        gap: 20px;
        justify-content: center;
    }

    .btn {
        padding: 15px 30px;
        font-size: 18px;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.2s;
        min-width: 120px;
    }

    .btn-decrement {
        background: #ff4757;
        color: white;
    }

    .btn-decrement:hover {
        background: #ee5a6f;
        transform: translateY(-2px);
    }

    .btn-reset {
        background: #f1f2f6;
        color: #333;
    }

    .btn-reset:hover {
        background: #dfe4ea;
        transform: translateY(-2px);
    }

    .btn-increment {
        background: #1e90ff;
        color: white;
    }

    .btn-increment:hover {
        background: #3da0ff;
        transform: translateY(-2px);
    }
}

fn Counter() -> JSX {
    return (
        <div class="counter-card">
            <h1 class="title">Simple Counter</h1>
            <div class="count-display" id="count">0</div>
            <div class="button-group">
                <button class="btn btn-decrement" id="dec-btn">âˆ’ Decrease</button>
                <button class="btn btn-reset" id="reset-btn">Reset</button>
                <button class="btn btn-increment" id="inc-btn">+ Increase</button>
            </div>
        </div>
    );
}

