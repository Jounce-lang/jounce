// Test: Control flow structures
fn main() {
    // If-else
    let x = 10;
    if x > 5 {
        let result = "greater";
    } else {
        let result = "less or equal";
    }

    // Logical operators
    let a = true;
    let b = false;
    if a && b {
        let both_true = 1;
    }
    if a || b {
        let at_least_one = 1;
    }

    // Ternary operator
    let value = x > 5 ? "yes" : "no";

    // Ternary with block
    let complex = x > 5 ? { let temp = x * 2; temp } : x;

    // For-in loop
    let items = vec![1, 2, 3];
    for item in items {
        let doubled = item * 2;
    }

    // While loop
    let mut count = 0;
    while count < 5 {
        count = count + 1;
    }

    return 0;
}
