// Interactive Todo List with Full Reactivity
// Demonstrates dynamic list management with signals

style {
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 40px 20px;
    }

    .container {
        max-width: 600px;
        margin: 0 auto;
        background: white;
        border-radius: 12px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        overflow: hidden;
    }

    .header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        text-align: center;
    }

    .header h1 {
        font-size: 32px;
        margin-bottom: 8px;
    }

    .subtitle {
        opacity: 0.9;
        font-size: 14px;
    }

    .add-task {
        padding: 20px;
        display: flex;
        gap: 10px;
        border-bottom: 1px solid #eee;
    }

    .task-input {
        flex: 1;
        padding: 12px 16px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 14px;
        transition: border-color 0.2s;
    }

    .task-input:focus {
        outline: none;
        border-color: #667eea;
    }

    .btn-add {
        padding: 12px 24px;
        background: #667eea;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }

    .btn-add:hover {
        background: #5568d3;
    }

    .task-list {
        max-height: 400px;
        overflow-y: auto;
    }

    .task-item {
        padding: 16px 20px;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        align-items: center;
        gap: 12px;
        transition: background 0.2s;
    }

    .task-item:hover {
        background: #f8f8f8;
    }

    .task-item.completed .task-text {
        text-decoration: line-through;
        opacity: 0.5;
    }

    .task-checkbox {
        width: 20px;
        height: 20px;
        cursor: pointer;
    }

    .task-text {
        flex: 1;
        font-size: 15px;
    }

    .btn-delete {
        padding: 6px 12px;
        background: #ff4757;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 12px;
        cursor: pointer;
        transition: background 0.2s;
    }

    .btn-delete:hover {
        background: #ee5a6f;
    }

    .task-footer {
        padding: 16px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #f9f9f9;
    }

    .task-count {
        font-size: 14px;
        color: #666;
    }

    .btn-clear {
        padding: 8px 16px;
        background: white;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 13px;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-clear:hover {
        background: #f0f0f0;
        border-color: #ccc;
    }

    .empty-state {
        padding: 60px 20px;
        text-align: center;
        color: #999;
    }

    .empty-state p {
        font-size: 16px;
        margin-bottom: 8px;
    }
}

fn TodoApp() -> JSX {
    return (
        <div class="container">
            <header class="header">
                <h1>âœ“ Todo List</h1>
                <p class="subtitle">Fully reactive task management</p>
            </header>

            <div class="add-task">
                <input
                    type="text"
                    class="task-input"
                    id="new-task-input"
                    placeholder="What needs to be done?"
                />
                <button class="btn-add" id="add-btn">Add Task</button>
            </div>

            <div class="task-list" id="task-list">
                <div class="empty-state">
                    <p>ğŸ“ No tasks yet</p>
                    <p style="font-size: 14px;">Add your first task above!</p>
                </div>
            </div>

            <footer class="task-footer">
                <span class="task-count" id="task-count">0 tasks</span>
                <button class="btn-clear" id="clear-btn">Clear completed</button>
            </footer>
        </div>
    );
}

