// Test lambda block bodies in JSX attributes

component Counter() {
    return <div>
        <h1>Test Lambda Block Bodies</h1>

        <button onclick={() => {
            let x = 1;
            let y = 2;
            console.log(x + y);
        }}>Test Block Body</button>

        <button onclick={(e) => {
            console.log("Event:", e);
            alert("Multi-statement block!");
        }}>Test With Param</button>

        <button onclick={() => console.log("Expression body still works")}>Test Expression Body</button>
    </div>;
}

fn main() {}
