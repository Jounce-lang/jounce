// Test nested style selectors with &:hover
component StyledButton() {
    let count = signal<i32>(0);

    fn increment() {
        count.value = count.value + 1;
    }

    return <div class="container">
        <h1>Styled Component Test</h1>
        <p>Count: {count.value}</p>
        <button onclick={increment}>Click Me</button>
    </div>;
}

style StyledButton {
    .container {
        padding: 40px;
        text-align: center;
    }

    button {
        padding: 10px 20px;
        font-size: 16px;
        background: #f0f0f0;
        border: 2px solid #ddd;
        border-radius: 4px;
        cursor: pointer;

        &:hover {
            background: #007bff;
            color: white;
            border-color: #0056b3;
        }

        &:active {
            background: #0056b3;
        }
    }

    h1 {
        color: #333;
        margin-bottom: 20px;
    }
}
