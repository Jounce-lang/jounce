// Tests basic navigation without complex router struct

// Home Page Component
component HomePage() {
    <div>
        <h1>Home Page</h1>
        <p>Welcome to Jounce Routing!</p>
        <nav>
            <a href="/">Home</a>
            <a href="/about">About</a>
            <a href="/contact">Contact</a>
        </nav>
    </div>
}

// About Page Component
component AboutPage() {
    <div>
