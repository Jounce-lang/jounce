// Main app with routing demo
fn main() {
    let currentPage = signal("/");

    let app = <div>
        <h1>Client-Side Routing Demo</h1>
        <p>Current Route: {currentPage.value}</p>

        <div id="app-content">
            <HomePage />
        </div>
    </div>;
}
